{
  "name": "onlysq-cloud-pc-app",
  "version": "1.0.0",
  "description": "Unofficial OnlySQ Cloud PC App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "vite",
    "build": "vite build",
    "dist": "npm run build && npx electron-builder"
  },
  "build": {
    "appId": "com.onlysq.cloud",
    "productName": "OnlySQ Cloud",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "assets/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "OnlySQ Cloud"
    }
  },
  "author": "StackX",
  "license": "ISC",
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.2",
    "electron": "^28.0.0",
    "electron-builder": "^25.1.8",
    "vite": "^7.3.1"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "framer-motion": "^12.25.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  }
}